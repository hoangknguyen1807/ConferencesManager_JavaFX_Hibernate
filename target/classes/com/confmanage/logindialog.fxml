<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<DialogPane fx:id="dialogPaneLogIn" prefHeight="200.0" prefWidth="440.0" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.confmanage.controllers.LogInDialogController">
    <content>
        <AnchorPane>
            <Label text="Đăng nhập vào tài khoản Người dùng" AnchorPane.leftAnchor="20.0" AnchorPane.topAnchor="10.0">
                <font>
                    <Font name="Arial Bold" size="14.0" />
                </font>
            </Label>
            <GridPane hgap="10.0" vgap="20.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="50.0">
                <Label text="Username:" GridPane.columnIndex="0" GridPane.rowIndex="0">
                    <font>
                        <Font name="System Bold" size="12.0" />
                    </font>
                </Label>

                <TextField fx:id="txtfldUserName" prefWidth="200.0" GridPane.columnIndex="1" GridPane.hgrow="ALWAYS" GridPane.rowIndex="0" />

                <Label text="Password:" GridPane.columnIndex="0" GridPane.rowIndex="1">
                    <font>
                        <Font name="System Bold" size="12.0" />
                    </font>
                </Label>

                <PasswordField fx:id="passwordField" prefWidth="200.0" GridPane.columnIndex="1" GridPane.hgrow="ALWAYS" GridPane.rowIndex="1" />

                <columnConstraints>
                    <ColumnConstraints />
                    <ColumnConstraints />
                </columnConstraints>
                <rowConstraints>
                    <RowConstraints />
                    <RowConstraints />
                </rowConstraints>

            </GridPane>

            <ButtonBar AnchorPane.bottomAnchor="-10.0" AnchorPane.rightAnchor="10.0">
                <buttons>
                    <Button fx:id="btnSignIn" defaultButton="true" text="Đăng nhập" />
                    <Button fx:id="btnCancel" cancelButton="true" text="Hủy" />
                </buttons>
            </ButtonBar>

            <Label fx:id="labelRegister" onMouseEntered="#labelRegisterMouseEnter"
                   onMouseExited="#labelRegisterMouseExit"
                   text="Nhấn vào đây để đăng ký tài khoản mới" AnchorPane.bottomAnchor="-4.0"
                   AnchorPane.leftAnchor="20.0" onMouseClicked="#labelRegisterClick" >
                <font>
                    <Font size="10.0"/>
                </font>
            </Label>
        </AnchorPane>
    </content>
    <buttonTypes>
        <ButtonType fx:constant="CLOSE" />
    </buttonTypes>
</DialogPane>
